		string tp;
		while (getline(newfile, tp)) {       //read data from file object and put it into string.
			cout << tp << "\n";              //print the data of the string
		}
		newfile.close();                     //close the file object.
	}
	
    //---------------------------------------------------------------
    //This code is a rough outline of how our project list might get read in: 

    int option;
    char project[4];                        //initilizes project with 4 char array elements
        ifstream infile;                    //sets up input file stream named infile
        infile.open("projectList.csv");     //uses infile to open "project list"

    while (infile.good()) {                 //infinite loop while data is available
        string line;                        //sets up string named "line"
