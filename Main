//COMP-3000-Final-Project
#include <fstream>
#include <string>
#include <vector> 
#include <array> 
#include <cstdlib>
#include <stdlib.h>
#include <iostream>

using namespace std;

int main()
{
    cout << "Worker 1 is Keel, James | Worker 2 is Smith, Will | Worker 3 is Joel, Billy" << endl;

    int projectData[3][5];              
    projectData[0][0] = 1; projectData[0][1] = 10000; projectData[0][2] = 1; projectData[0][3] = 0; projectData[0][4] = 0;
    projectData[1][0] = 2; projectData[1][1] = 20000; projectData[1][2] = 1; projectData[1][3] = 1; projectData[1][4] = 0;
    projectData[2][0] = 3; projectData[2][1] = 30000; projectData[2][2] = 1; projectData[2][3] = 1; projectData[2][4] = 1;

    int i = 0;
    int j = 0;


    for (int i = 0; i < 3; i++)
    {
        for (int j = 0; j < 5; j++)
        {
            cout << projectData[i][j] << " ";
        }
        cout << endl;
    }

    //------------------------ Sum project budgets:
    int totalBudget = 0;
    int budgetGoal = 100000;
    int budgetDiff = 0;
    totalBudget = (projectData[0][1] + projectData[1][1] + projectData[2][1]);
    if (totalBudget < budgetGoal)
        budgetDiff = budgetGoal - totalBudget; 
        cout << "You are under-budget. You have currently used $" << totalBudget << ". Your remaining budget is $" << budgetDiff << endl;
    if (totalBudget > budgetGoal)
    {
        budgetDiff = budgetGoal - totalBudget;
        cout << "You are over budget by $" << budgetDiff << endl; 
    }

    //------------------------ Reports sum of workers on project:
    int project1Workers; int project2Workers; int project3Workers; int projectSelection; 

    project1Workers = (projectData[0][2] + projectData[0][3] + projectData[0][4]);

    project2Workers = (projectData[1][2] + projectData[1][3] + projectData[1][4]);

    project3Workers = (projectData[2][2] + projectData[2][3] + projectData[2][4]);



    cout << "What project would you like to see the number of workers on? Please enter 1, 2, or 3. " << endl;

    cin >> projectSelection;



    switch (projectSelection) {

    case 1:

        cout << "There are " << project1Workers << " on project 1." << endl;
        break;

    case 2:

        cout << "There are " << project2Workers << " on project 2." << endl;
        break;

    case 3:

        cout << "There are " << project3Workers << " on project 3." << endl;
        break;
    
    default: 

        cout << "pick another number"; 
        break;
    }

    //------------------------ Report projects that each worker is on: 
    //    use switch to choose between workers (by number), and use setwidth   !!!

//    string workerNames[4] = {"Names", "Keel, james", "Smith, Will", "Joel, Billy"};
//    cout << "Worker Name | Project:  1   2   3";
//    cout << workerNames[1] << "         " << projectData[0][2] << "    " << projectData[1][2] << "    " << ;



}

